{
  "author": "Daily Muse Inc",
  "name": "mithril-coat",
  "description": "A minimalistic frontend web framework that builds on Mithril",
  "version": "0.1.0",
  "main": "lib/index.js",
  "bin": {
    "coat": "bin/coat.js"
  },
  "scripts": {
    "build": "browserify src/index.js -o build/coat.js -s coat",

    "prebuild": "mkdir -p build",
    "postbuild": "cd build && uglifyjs coat.js -o coat.min.js --source-map coat.min.map"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dailymuse/valyrian"
  },
  "dependencies": {
    "browserify": "4.2.3",
    "domhandler": "2.2.0",
    "htmlparser2": "3.8.0",
    "mithril": "0.1.25",
    "mkdirp": "0.5.0",
    "node-watch": "0.3.4",
    "optimist": "0.6.1",
    "uglify-js": "2.4.15",
    "underscore": "1.7.0"
  },
  "keywords": [
    "frameworks",
    "client",
    "web",
    "app",
    "mithril"
  ],
  "author": "The Muse <yusuf@themuse.com> (https://www.themuse.com/)",
  "homepage": "https://github.com/dailymuse/shadow",
  "license": "BSD",
  "devDependencies": {
    "qunitjs": "^1.16.0"
  }
}
